.wx-detail-foodlist{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 40rpx;
}
.wx-detail-img{
  width: 650rpx;
  height: 420rpx;
  border-radius: 10rpx;
  position: relative;
}
.wx-detail-img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.wx-detail-name-area{
  width: 100%;
  height: 120rpx;
  background-color: rgba(0,0,0,0.5);
  position: absolute;
  left: 0;
  bottom: 0;
}
.wx-detail-item-name,.wx-detail-item-ingredients{
  width: 100%;
  height: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
  display: block;
  margin: 10rpx 10rpx 0 10rpx;
}
.wx-detail-item-name{
  font-size: 40rpx;
}
.wx-detail-item-ingredients{
  font-size: 30rpx;
  margin-top: 20rspx;
}
.wx-detail-stars{
  width: 650rpx;
  height: 50px;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
}
.wx-detail-item-stars,.wx-detail-item-watch{
  width: auto;
  height: auto;
  margin-right: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.wx-detail-stars image{
   width: 40rpx;
   height: 40rpx;
}
.wx-detail-stars text{
  font-size: 30rpx;
  color: #333;
  margin-left: 10rpx;
}