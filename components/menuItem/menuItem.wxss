.wx-menu-item{
  width: 100%;
  height: 240rpx;
  background: #fff;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.wx-menu-type-img{
  width: 220rpx;
  height: 200rpx;
  background: red;
}
.wx-menu-type-img image{
  width: 100%;
  height: 100%;
}
.wx-menu-type-info{
  width: 460rpx;
  height: 200rpx;
}
.wx-menu-type-info-name{
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.wx-menu-type-info-detail{
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
}
.wx-item-menus{
  font-size: 30rpx;
  color: #333;
  margin-right: 20rpx;
}
.wx-food-stars,.wx-food-yulan{
  width: auto;
  height: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-right: 20rpx;
}
.wx-food-stars image,.wx-food-yulan image{
  width: 40rpx;
  height: 40rpx;
}
.wx-food-stars text,.wx-food-yulan text{
  font-size: 30rpx;
  color: #333;
}